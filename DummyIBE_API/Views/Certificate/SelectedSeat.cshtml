<body>
    <div id="app">
        <div class="greetings">
            <h1 class="green">Dummy IBE</h1>
        </div>
        <main>
            <div class="table_component" role="region" tabindex="0">
                <table>
                    <thead>
                        <tr>
                            <th colspan="2">Selected Seat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Ref Id</td>
                            <td colspan="1">@Model.RefId</td>
                        </tr>
                        @{
                            for(int idx = 0; idx < Model.SelectedSeats.Count; idx++)
                            {
                                var seat = Model.SelectedSeats[idx];
                                <tr>
                                    <td>Seat #@(idx+1)</td>
                                    <td>
                                        Origin: @seat.OriginCity <br />
                                        Destination: @seat.DestinationCity <br />
                                        Airline: @seat.Carrier <br />
                                        Flight No: @seat.FlightNo <br />
                                        Departure Date: @seat.DepartureDate.ToString("yyyy-MM-dd") <br />
                                        <br/>
                                        Selected Seat :- <br />
                                        @{
                                            for(int idxPax = 0; idxPax < seat.Passengers.Count; idxPax++)
                                            {
                                                var paxSeat = seat.Passengers[idxPax];
                                                var pax = Model.Passengers.First(x => x.Id == paxSeat.Id);
                                                <text>@pax.FirstName @pax.LastName <strong>(@paxSeat.SeatNumber)</strong></text><br />
                                            }
                                        }                                   
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </main>
